{% extends "layout.html.twig" %}

{% block title %}{{ event.name }}{% endblock %}

{% block content %}
<p>
    <h2>{{ event.name }}</h2>
    <p>{{ event.desc }}</p>

    <h3>Comments</h3>
    {% for comment in comments %}
        <strong>{{ comment.rate }}</strong> said : {{ comment.text }}<br>
    {% else %}
        No comments yet.
    {% endfor %}

    <h3>Add a comment</h3>
    {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
        Soon!
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
</p>
{% endblock %}
